# Directus Configuration
# use strong and random password 
SECRET=change-this-to-a-very-secure-random-secret-key-minimum-32-characters
KEY=another-secure-key-for-encryption-change-this-too

# Admin Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=SecurePassword123!ChangeThis

# Email Configuration (optional)
EMAIL_FROM=noreply@example.com
EMAIL_TRANSPORT=sendmail

# Security and Performance
RATE_LIMITER_ENABLED=true
RATE_LIMITER_POINTS=50
RATE_LIMITER_DURATION=1

# Log Level
LOG_LEVEL=info

# Token Durations
ACCESS_TOKEN_TTL=1d
REFRESH_TOKEN_TTL=7d

# File Uploads
MAX_PAYLOAD_SIZE=100mb
